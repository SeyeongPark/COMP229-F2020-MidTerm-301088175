<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <main class="container" style="width: 650px;">
      <div class="jumbotron">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <center><h3 id="top_title"><%= title %></h3></center>
          <hr>
            <form class="form" method="post">
              <div class="form-group">
                <label for="NameTextField">Title</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Enter Book Name" name="Title" value="<%= books.Title %>" required>
              </div>
              <div class="form-group">
                <label for="PriceTextField">Price</label>
                <input type="number" step="any" class="form-control" id="PriceTextField"
                placeholder="Book Price - Only enter number " name="Price" value="<%= books.Price %>"  required>
              </div>
              <div class="form-group">
                <label for="AuthorTextField">Author</label>
                <input type="text" class="form-control" id="AuthorTextField"
                placeholder="Enter Book Author" name="Author" value="<%= books.Author %>"  required>
              </div>
              <div class="form-group">
                <label for="GenreTextField">Genre</label>
                <input type="text" class="form-control" id="GenreTextField"
                placeholder="Enter Book Genre" name="Genre" value="<%= books.Genre %>"  required>
              </div>

              <center>
                <button class="btn btn-primary btn" type="submit"> 
                <i class="fa fa-check-circle"></i>&emsp; Submit</button>
                &emsp;&emsp;
                <a href="/books" class="btn btn-warning btn" >
                <i class="fa fa-trash"></i>&emsp; Cancel</a>
            </center>

            </form>
        </div>
      </div>
    </div>
  </div>
    </main>


<% include ../partials/footer.ejs %>
